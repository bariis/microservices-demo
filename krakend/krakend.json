{
  "version": 2,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/sign-up",
      "method": "POST",
      "output_encoding": "json",
      "headers_to_pass": [
        "Authorization"
      ],
      "backend": [
        {
          "url_pattern": "/api/v1/sign-up",
          "encoding": "json",
          "method": "POST",
          "host": [
            "http://identityservice:5002"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/sign-in",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/v1/sign-in",
          "method": "POST",
          "host": [
            "http://identityservice:5002"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend/http": {
              "return_error_details": "identity"
            }
          }
        }
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/signer": {
          "alg": "HS256",
          "kid": "1",
          "keys-to-sign": [
            "access_token"
          ],
          "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/add",
      "method": "POST",
      "output_encoding": "json",
      "headers_to_pass": [
        "Authorization"
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "HS256",
          "audience": [
            "http://krakend:5000"
          ],
          "issuer": "http://identityservice:5002",
          "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/add-cart",
          "encoding": "json",
          "method": "POST",
          "host": [
            "http://cartservice:5001"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/empty",
      "method": "DELETE",
      "output_encoding": "json",
      "headers_to_pass": [
        "Authorization"
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "HS256",
          "audience": [
            "http://krakend:5000"
          ],
          "issuer": "http://identityservice:5002",
          "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/empty-cart",
          "encoding": "json",
          "method": "DELETE",
          "host": [
            "http://cartservice:5001"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/get",
      "method": "GET",
      "output_encoding": "json",
      "headers_to_pass": [
        "Authorization"
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "HS256",
          "audience": [
            "http://krakend:5000"
          ],
          "issuer": "http://identityservice:5002",
          "jwk-url": "http://fake_api:8080/jwk/symmetric.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/get-cart",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://cartservice:5001"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}